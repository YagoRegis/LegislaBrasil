<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/deputado_foto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right" />

    <TextView
        android:id="@+id/deputado_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_toRightOf="@+id/deputado_foto"/>

    <TextView
        android:id="@+id/deputado_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/deputado_name"
        android:layout_toRightOf="@+id/deputado_foto"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/deputado_uf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_toRightOf="@+id/deputado_partido"
        android:layout_below="@id/deputado_name" />


</RelativeLayout>